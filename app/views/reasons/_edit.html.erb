<!-- Modal Dialog -->
<dialog class="modal-hidden" aria-labelledby="modal-title" role="dialog" aria-modal="true" data-modal-target="modal">

  <!-- Desktop Overlay -->
  <div class="desktop-overlay fixed inset-0 bg-black opacity-95 z-10"></div>
  <div class="fixed inset-0 z-10 w-screen overflow-y-auto modal-body">
    <div class="flex min-h-full items-end justify-center p-4 text-center sm:items-center sm:p-0">
      <div class="relative transform overflow-hidden rounded-xl bg-white text-left shadow-xl transition-all w-[720px]">

        <!-- Modal Content -->
        <div class="bg-white px-4 pb-4 pt-5 sm:p-6 sm:pb-4">
          <div class="flex">
            <h2 id="modal-title" class="text-2xl leading-6 font-medium text-gray-900 grow">Edit Return Reason</h2>
          
            <div class="align-top">
              <button type="button" data-action="click->modal#hide">
                <%= render "common/svg/close" %>
              </button>
            </div>
          </div>
          
          <hr class="my-5">
          <div class="mt-3">
            <%= render 'reasons/fields', f: f %>
          </div>
        </div>

        <!-- Modal Footer -->
        <div class="px-4 py-3 sm:flex sm:flex sm:px-6">
          <div>
            <button type="button" class="btn-danger" data-action="nested-form#removeAssociation click->modal#hide">Delete</button>
          </div>
          <div class="text-right grow">
            <button type="button" data-action="click->modal#hide" class="btn-primary">
              Continue
            </button>
          </div>
        </div>

      </div>
    </div>
  </div>
  
</dialog>